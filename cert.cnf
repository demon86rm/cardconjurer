# Country Name (C)
#Organization Name (O)
#Common Name (CN) - Set this to your serverâ€™s hostname or IP address.

# SAN (Subject Alternative Name), [alt-names] is required
# You can add as many hostname and IP entries as you wish

[req]
default_md = sha256
distinguished_name = req_distinguished_name
req_extensions = v3_ext
x509_extensions = v3_ext
prompt = no

[req_distinguished_name]
C = IT # change it to your country, if you want;
O = ACME # if you care about the organization name, change also this;
CN = localhost # feel free to replace it with the hostname that you're gonna use;

[v3_ext]
subjectAltName = @alt_names

[alt_names]
DNS.1 = cardconjurer                  # alternative names that your host might have;
DNS.2 = cardconjurer.kaldheim.svc.cluster.local                 # as above, another alternative name;
IP.1 = 127.0.0.1             # Replace with your server IP or leave as it is.
